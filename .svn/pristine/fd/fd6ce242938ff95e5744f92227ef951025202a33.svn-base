<div class="tab-pane active" id="tab_a">
    <h4>Guardian Information</h4>
    <div class="col-sm-12">
        <fieldset>
            <legend>Local Guardian Information</legend>
            <div class="form-group">
                <label class=" col-sm-4 control-label" for="local_guardian_name">Name</label>
                <div class=" col-sm-7 col-xs-12">
                    <input id="local_guardian_name" name="local_guardian_name" type="text" placeholder="Name" class="form-control input-md">
                </div>
            </div>
            <div class="form-group">
                <label class=" col-sm-4 control-label" for="local_guardian_ph">Phone No</label>
                <div class=" col-sm-7 col-xs-12">
                    <input id="local_guardian_ph" name="local_guardian_ph" type="text" placeholder="Phone No" class="form-control input-md" data-inputmask='"mask": "99999999999"' data-mask>
                </div>
            </div>

            <div class="form-group">
                <label class=" col-sm-4 control-label" for="local_guardian_address">Address</label>
                <div class=" col-sm-7 col-xs-12">
                    <textarea id="local_guardian_address" name="local_guardian_address"  placeholder="Guardian Addres" class="form-control input-md" width= "100%"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class=" col-sm-4 control-label" for="local_guardian_occupation">Occupation</label>  
                <div class="col-sm-7 col-xs-12">
                    <input id="local_guardian_occupation" name="local_guardian_occupation" type="text" placeholder="Occupation" class="form-control input-md">
                </div>
            </div>
            <div class="form-group">
                <label class=" col-sm-4 control-label" for="local_relationship">Relationship With Student</label>  
                <div class=" col-sm-7 col-xs-12">
                    <input id="local_relationship" name="local_relationship" type="text" placeholder="Relationship With Student" class="form-control input-md">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="ft_occupation">Is Contact Person</label>  
                <div class="col-md-7">
                    <input id="contact_person" class="contact-person" name="contact_person_lg" type="radio" value="1"> Yes
                    <input id="contact_person" class="contact-person" name="contact_person_lg" checked="" type="radio" value="0"> No
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>Guardian Info(Absent of Parents)</legend>
            
            <div class="form-group">
                <label class=" col-sm-4 control-label" for="ab_guardian_name">Name</label>
                <div class="col-sm-7 col-xs-12">
                    <input id="ab_guardian_name" name="ab_guardian_name" type="text" placeholder="Name" class="form-control input-md">
                </div>
            </div>
            <div class="form-group">
                <label class=" col-sm-4 control-label" for="ab_guardian_ph">Phone No</label>
                <div class="col-sm-7 col-xs-12">
                    <input id="ab_guardian_ph" name="ab_guardian_ph" type="text" placeholder="Phone No" class="form-control input-md" data-inputmask='"mask": "99999999999"' data-mask>
                </div>
            </div>

            <div class="form-group">
                <label class=" col-sm-4 control-label" for="ab_guardian_address">Address</label>
                <div class="col-sm-7 col-xs-12">
                    <textarea id="ab_guardian_address" name="ab_guardian_address"  placeholder="Address" class="form-control input-md" width= "100%"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class=" col-sm-4 control-label" for="ab_guardian_occupation">Occupation</label>  
                <div class="col-sm-7 col-xs-12">
                    <input id="ab_guardian_occupation" name="ab_guardian_occupation" type="text" placeholder="Occupation" class="form-control input-md">
                </div>
            </div>
            <div class="form-group">
                <label class=" col-sm-4 control-label" for="relationship">Relationship With Student</label>  
                <div class="col-sm-7 col-xs-12">
                    <input id="ab_relationship" name="ab_relationship" type="text" placeholder="Relationship With Student" class="form-control input-md">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="ft_occupation">Is Contact Person</label>  
                <div class="col-md-7">
                    <input id="contact_person" class="contact-person" name="contact_person_ap" type="radio" value="1"> Yes
                    <input id="contact_person" class="contact-person" name="contact_person_ap" checked="" type="radio" value="0"> No
                </div>
            </div>
        </fieldset>
    </div>

</div>